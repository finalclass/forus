<h2 class="title is-3"><%= gettext "Change password" %></h2>

<%= form_for @changeset, accounts_panel_path(@conn, :change_password), fn f ->  %>
<%= if @changeset.action do %>
  <div class="notification is-danger">
    <p>Oops, something went wrong! Please check the errors below.</p>
  </div>
<% end %>

<%= forus_password_field f, :password_current %>
<%= forus_password_field f, :password %>
<%= forus_password_field f, :password_confirmation %>

<div class="form-group">
  <%= submit "Submit", class: "btn btn-primary" %>
</div>

<% end %>

